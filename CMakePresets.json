{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-x64",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_C_STANDARD": "17",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "CC": "clang-cl",
                "CXX": "clang-cl"
            }
        },
        {
            "name": "debug-x64",
            "inherits": "base-x64",
            "displayName": "Debug/x64",
            "description": "Debug configuration of Nomad Engine",
            "binaryDir": "${sourceDir}/Binaries/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-x64",
            "inherits": "base-x64",
            "displayName": "Release/x64",
            "description": "Release configuration of Nomad Engine",
            "binaryDir": "${sourceDir}/Binaries/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-x64",
            "configurePreset": "debug-x64",
            "displayName": "Debug/x64"
        },
        {
            "name": "release-x64",
            "configurePreset": "release-x64",
            "displayName": "Release/x64"
        }
    ]
}
